    </div>
    <div class="row">
        <div class="col-md-6">{{ form_row(form.surface) }}</div>
        <div class="col-md-6">{{ form_row(form.rooms) }}</div>
    </div>
    <div class="row">
        <div class="col-md-4">{{ form_row(form.bedrooms) }}</div>
        <div class="col-md-4">{{ form_row(form.heat) }}</div>
        <div class="col-md-4">{{ form_row(form.floor) }}</div>
    </div>
    <div class="row">
        <div class="col-md-4">{{ form_row(form.description) }}</div>
        <div class="col-md-4">{{ form_row(form.city) }}</div>
